<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/sidebar', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <% if User.find(book.user_id).profile_image_id != nil %>
                  <%= link_to (attachment_image_tag User.find(book.user_id), :profile_image, :fill, 100, 100, format: 'jpeg'), user_path(book.user_id) %>
                <% else %>
                  <%= link_to (image_tag "/noimage.png", alt:"noimage", size:"100x100"), user_path(book.user_id) %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book) %>
              </td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
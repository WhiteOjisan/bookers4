<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <% if @book.nil? == false %>
        <% if @book.errors.any? %>
          <%= @book.errors.count %> error.
          <% @book.errors.full_messages.each do |message| %>
            <%= message %>
          <% end %>
        <% end %>
      <% end %>
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "", edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model: @book, local:true do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book', class:"btn btn-success" %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <a href="">
                <%= attachment_image_tag current_user, :profile_image, :fill, 50, 50, format: 'jpeg' %>
              </a>
            </td>
            <td>
              <a class="" href=""><%= @book.title %></a>
            </td>
            <td><%= @book.body %></td>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %>
              <%= link_to "Destroy", book_path(@book), method:"delete", data:{confirm:'Are you sure?'}, class:"btn btn-danger" %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
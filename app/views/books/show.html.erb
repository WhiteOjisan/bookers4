<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/sidebar', user: @user, book: nil %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <% if User.find(@book.user_id).profile_image_id != nil %>
                <%= link_to (attachment_image_tag User.find(@book.user_id), :profile_image, :fill, 50, 50, format: 'jpeg'), user_path(@book.user_id) %>
              <% else %>
                <%= link_to (image_tag "/noimage.png", alt:"noimage", size:"50x50"), user_path(@book.user_id) %>
              <% end %>
              <br>
              <%= link_to User.find(@book.user_id).name, user_path(@book.user_id) %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.user_id == current_user.id %>
                <%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %>
                <%= link_to "Destroy", book_path(@book), method:"delete", data:{confirm:'Are you sure?'}, class:"btn btn-danger" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>